#:kivy 2.0.0

Screen:
    HomeScreen:
        id:home
        name:'home'

<HomeScreen>:
    # Box layout for the main screen
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 30
        size_hint: None, None
        size: 500, 200
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        # Title label for the app
        Label:
            text: 'Weather App'
            font_size: 32
            size_hint_y: None
            height: self.texture_size[1]
            halign: 'center'
            valign: 'middle'
            padding: 10

        # Grid layout for text fields
        GridLayout:
            cols: 2
            size_hint_y: None
            adaptive_size: True
            spacing: 20

            # Text fields
            MDTextFieldRect:
                hint_text: 'City'
                id : city_name
                size_hint: 1, None
                height: 70
            MDTextFieldRect:
                hint_text: 'Country name'
                id : country_name
                size_hint: 1, None
                height: 70

        # Search button
        MDRaisedButton:
            text: "Search Weather"
            pos_hint: {'center_x': .5}
            size_hint: None, None
            size: 200, 50
            font_size: 20
            md_bg_color: 0, 0.8, 0, 1
            on_release: root.search()
            padding: 30
           
        # Grid layout for the weather details
        GridLayout:
            cols: 2
            row_default_height: 50
            row_force_default: True
            spacing: 40
            padding: 5

            # Box layouts and labels for weather details
            # Temperature
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 50
                MDLabel:
                    text: f"[b]Temperature:[/b] {root.temperature}"
                    markup: True
                    halign: "left"
                    valign: "middle"
                    size_hint_y: None
                    height: self.texture_size[1]

            # Humidity
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 50
                MDLabel:
                    text: f"[b]Humidity:[/b] {root.humidity}"
                    markup: True
                    halign: "right"
                    valign: "middle"
                    size_hint_y: None
                    height: self.texture_size[1]

            # Pressure
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 50
                MDLabel:
                    text: f"[b]Pressure:[/b] {root.pressure}"
                    markup: True
                    halign: "left"
                    valign: "middle"
                    size_hint_y: None
                    height: self.texture_size[1]

            # Visibility
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 50
                MDLabel:
                    text: f"[b]Visibility:[/b] {root.visibility}"
                    markup: True
                    halign: "right"
                    valign: "middle"
                    size_hint_y: None
                    height: self.texture_size[1]

            # Description spanning both columns
            BoxLayout:
                orientation: 'vertical'
                size_hint: 1, None
                adaptive_size: True
                MDLabel:
                    text: f"[b]Description:[/b] {root.description}"
                    markup: True
                    halign: "left"
                    valign: "middle"
                    size_hint: 2, None
                    height: self.texture_size[1]